<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Sombra -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#66000000"/> <!-- Sombra gris oscuro, semi-transparente -->
                    <corners android:radius="40dp"/>
                    <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/> <!-- Desplazamiento de la sombra -->
                </shape>
            </item>

            <!-- Contenido principal -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF"/> <!-- Fondo blanco -->
                    <corners android:radius="40dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
